///////////////////////////////////////////////////////////////////////////////////////
// Set Brightness
///////////////////////////////////////////////////////////////////////////////////////
void setBrightness(uint8_t value)
{
    bus->beginWrite();
    bus->writeC8D8(0x51, value);
    bus->endWrite();
}

/////////////////////////////////////////////////////////////////
// Display Setup
/////////////////////////////////////////////////////////////////
void displaySetup()
{
  gfx->begin();
  gfx->fillScreen(BLACK);
  gfx->flush();
  setBrightness(255);
}
